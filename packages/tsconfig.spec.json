{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@delon/*": ["./*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitThis": false
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "**/schematics/**/*"
  ]
}
